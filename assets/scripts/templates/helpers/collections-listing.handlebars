{{#each collections as |collection|}}
  {{log collection}}
  <div class="wrapper">
    <section data-id="{{collection.id}}">
      <div class="container">
        <div class="row">
          <p class="handlebar-field">Name:&nbsp;</p>
          <p>
            {{limit collection.name 15}}
          </p>
        </div>
        <div class="row">
          <p class="handlebar-field">Author:&nbsp;</p>
        </div>
        <button class="button set-collection">Set</button>
        <button class="button" id="update-button" data-toggle="modal" data-target="#update">Update</button>
        <button class="button delete-collection">Remove</button>
      </div>
    </section>
  </div>
  <hr>
{{/each}}
