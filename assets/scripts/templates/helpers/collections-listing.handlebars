{{#each collections as |collection|}}
    <section data-id="{{collection._id}}">
      <div class="container">
        <div class="row collection-name">
          <p>
            {{limit collection.name 15}}
          </p>
        </div>
        <!-- Buttons are shown depending on whether the collection is editable or not -->
        <a class="underlineHoverBlue chenges set-collection">Set</a>
        <a class="underlineHoverYellow" id="update-button">Update</a>
        <a class="underlineHoverRed changes delete-collection">Remove</a>
      </div>
    </section>
  <hr>
{{/each}}
